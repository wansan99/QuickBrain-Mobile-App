<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">


    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="124dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/back_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="172dp"
        android:fontFamily="@font/open_sans_extrabold"
        android:text="Login"
        android:gravity="center"
        android:textColor="#FBBC05"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="350sp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:background="@drawable/textcolumn"
        android:ems="10"
        android:fontFamily="@font/open_sans_bold"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="12sp"
        android:textColor="#000000"
        android:textColorHint="#c4c4c4"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:textColorHint="#C4C4C4"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/rgPassword"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/textcolumn"
            android:ems="10"
            android:fontFamily="@font/open_sans_bold"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12sp"
            android:textColor="#000000"
            android:textColorHint="#C4C4C4"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSubmitLogin"
        android:layout_width="120pt"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/btn_bg_1"
        android:fontFamily="@font/open_sans"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/forgotPw"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="215dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/open_sans"
        android:text="Forgot Password"
        android:textColor="#FBBC05" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="73dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="By signing in to Quick Brain, you agree to our \nTerms and Conditions"
        android:textSize="12sp" />


</android.widget.RelativeLayout>